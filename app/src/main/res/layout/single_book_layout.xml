<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/purple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Book Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/BookNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Book Name"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/BooksCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Available Books"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/BooksLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Book Location"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BooksCategoryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Book Category"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/RequestBookBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="Request Book" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>